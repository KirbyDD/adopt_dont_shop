<main>
  <h2>List of Pets at <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %> </h2>
  <%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
  <section>
    <% @shelter.pets.each do |pet| %>
      <article class="pets-<%= pet.id %>">
        <h3><%= pet.name %></h3>
        <%= image_tag(pet.image) %>
        <p>Age: <%= pet.approximate_age %></p>
        <p>Sex: <%= pet.sex %></p>

        <%= link_to "Update Pet", "/pets/#{pet.id}/edit"%>
        <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %>
      </article>
    <% end %>
  </section>
</main>
